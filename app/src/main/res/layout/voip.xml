<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/follow_button_pressed_color"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/side_menu_button"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:padding="10dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="7dp" />

        <ImageView
            android:id="@+id/status_led"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/side_menu_button"
            android:adjustViewBounds="true"
            android:paddingLeft="5dp"
            android:src="@drawable/led_light" />

        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/status_led"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="Not Connected"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@android:drawable/stat_sys_warning"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/TryAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageButton"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-32dp"
            android:layout_marginRight="68dp"
            android:text="Try Again!"
            android:textColor="@color/red_color"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="invisible" />
    </RelativeLayout>

    <EditText

        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/status"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="80dp"
        android:layout_height="56dp"
        android:layout_marginTop="120dp"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/abc_vector_test" />


    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="411dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_below="@id/textView3">

        <Button
            android:id="@+id/button1"
            android:layout_width="84dp"
            android:layout_height="90dp"
            android:layout_toLeftOf="@id/button2"
            android:background="@color/follow_button_pressed_color"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="84dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:background="@color/follow_button_pressed_color"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            android:layout_width="84dp"
            android:layout_height="90dp"
            android:layout_marginBottom="392dp"
            android:layout_toRightOf="@id/button2"
            android:background="@color/follow_button_pressed_color"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayout4"
        android:layout_width="411dp"
        android:layout_height="90dp"
        android:layout_below="@id/linearLayout2"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="84dp"
            android:layout_height="90dp"
            android:layout_toLeftOf="@id/button5"
            android:background="@color/follow_button_pressed_color"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button5"
            android:layout_width="84dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:background="@color/follow_button_pressed_color"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button6"
            android:layout_width="84dp"
            android:layout_height="90dp"
            android:layout_marginBottom="392dp"
            android:layout_toRightOf="@id/button5"
            android:background="@color/follow_button_pressed_color"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_below="@id/linearLayout4">


        <Button
            android:id="@+id/button7"
            android:layout_width="84dp"
            android:layout_height="90dp"
            android:layout_toStartOf="@id/button8"
            android:layout_toLeftOf="@id/button8"
            android:background="@color/follow_button_pressed_color"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button8"
            android:layout_width="84dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:background="@color/follow_button_pressed_color"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button9"
            android:layout_width="84dp"
            android:layout_height="90dp"
            android:layout_marginBottom="392dp"
            android:layout_toEndOf="@id/button8"
            android:layout_toRightOf="@id/button8"
            android:background="@color/follow_button_pressed_color"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/LinearLayout"
        android:layout_width="411dp"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_below="@id/linearLayout">

        <Button
            android:id="@+id/button_star"
            android:layout_width="84dp"
            android:layout_height="90dp"
            android:layout_toStartOf="@id/button0"
            android:layout_toLeftOf="@id/button0"
            android:background="@color/follow_button_pressed_color"
            android:text="*"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button0"
            android:layout_width="84dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:background="@color/follow_button_pressed_color"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_hash"
            android:layout_width="84dp"
            android:layout_height="90dp"
            android:layout_marginBottom="392dp"
            android:layout_toEndOf="@id/button0"
            android:layout_toRightOf="@id/button0"
            android:background="@color/follow_button_pressed_color"
            android:text="#"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:layout_below="@id/LinearLayout"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/callbutton" />

</RelativeLayout>
